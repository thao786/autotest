packages:
  yum:
    patch: []
  rubygems:
    ffi: '1.9.18'
    nokogiri: []
files:
  "/etc/nginx/conf.d/02_app_server.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      server {
        location /fonts/ {
          root /var/app/current/vendor/assets/fonts;
        }
      }

container_commands:
  01_reload_nginx:
    command: "sudo service nginx reload"
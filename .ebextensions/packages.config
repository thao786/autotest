packages:
  yum:
    ImageMagick: []
    patch: []
  rubygems:
      ffi: '1.9.18'
container_commands:
  create_pic_dir:
    command: "mkdir -p pic"
    cwd: /home/ec2-user
files:
  "/etc/httpd/conf.d/ssl_rewrite.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
        RewriteEngine On
        <If "-n '%{HTTP:X-Forwarded-Proto}' && %{HTTP:X-Forwarded-Proto} != 'https'">
        RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI} [R,L]
        </If>
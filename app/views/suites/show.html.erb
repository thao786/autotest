
<br>
<div class="container-fluid">
<div class="row">
<div class="col-sm-10 col-sm-offset-1">
<h2 class="h2-title"> <strong>Suite Title:</strong> <%= @suite.title %>
<%= render "suites/delete_btn", suite: @suite %></h2>
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-4"><br>
    <div class="content-wrap effect2">
      <label>Suite config:</label>

      <%= form_tag("/suites/saveConfig", method: "post") do %>
          <input type="hidden" name="id" value="<%= @suite.id %>">
          <div id="pretest-for-suite">
            <%= render template: "suites/edit" %>
          </div>

          <button type="submit" class="btn btn-primary">Save</button>
      <% end %>
    </div>
  </div>

  <div class="col-sm-8">
    <h3>Total Tests: <%= @suite.tests.count %>  <button type="button" data-suite="<%= @suite.id %>" class="btn btn-default btn-md add-test-modal pointer inline-btn"><span class="glyphicon glyphicon-plus"></span> Add More Tests</button></h3>

    
    <% @tests = @suite.tests %>
    <%= render "tests/list", tests: @suite.tests %>

  </div>
</div>

</div>
</div>
</div>
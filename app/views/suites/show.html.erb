<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @suite.title %>
</p>

<div class="add-test-modal pointer" data-suite="<%= @suite.id %>">
  <span class="glyphicon glyphicon-plus"></span> Add Test</div>

<div class="container-fluid">
  <div class="col-sm-6"><br>
    <label>Suite config:</label>

    <%= form_tag("/suites/saveConfig", method: "post") do %>
      <div id="pretest-for-suite">
        <%= render partial: "layouts/test_list_select", suite: @suite %>
      </div>

      <button type="submit" class="btn btn-primary">Save</button>
    <% end %>
  </div>

  <div class="col-sm-6">
    <h2>Tests in this Suite (<%= @suite.tests.count %> total)</h2>

    <% @tests = @suite.tests %>
    <%= render file: "tests/index" %>
  </div>
</div>


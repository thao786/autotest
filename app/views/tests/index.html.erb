<div class="container">
  <table class="table table-bordered">
  <thead>
    <tr>
      <th>Suite</th>
      <th>Test Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <% suite = test.suite %>

      <tr>
        <td><%= link_to suite.title, controller: "suites", action: "show", id: suite.name %></td>
        <td><a href="<%= showUrl test %>"> <%= test.title %></a>
            <span class="glyphicon glyphicon-edit"></span>
        </td>
        <td><%= test.description %><span class="glyphicon glyphicon-edit"></span>
        </td>
        <td>
          <%= link_to raw('<span class="glyphicon glyphicon-remove"></span> Delete'), "#{test.name}",
                        method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>



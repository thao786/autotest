<div class="modal fade" id="stepModal" data-step="<%= @step.id %>">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Edit page load in browser </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="edit-scroll-form">
            <div class="form-group">
              <label for="wait">Wait:</label>
              <input name="wait" type="text" class="form-control"
                     value="<%= @step.wait %>" required>
            </div>
            <div class="form-group">
              <label for="scrollTop">Scroll Top:</label>
              <input name="scrollTop" type="text" class="form-control" required>
            </div>
            <div class="form-group">
              <label for="scrollLeft">Scroll Left:</label>
              <input name="scrollLeft" type="text" class="form-control" required>
            </div>
            <div>
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary submit" >Save changes</button>
            </div>
            <div class="error-modal">
            </div>
        </form>
      </div>
      </div>
    </div>
  </div>
</div>

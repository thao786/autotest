<div class="modal fade" id="newStepModal" data-step="<%= @step ? @step.id : '' %>">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add New Step</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="new-step-form" action="/step/save_new_step" method="post">
            <input name="test_id" value="<%= @test.id %>" type="hidden">
            <input name="step_id" value="<%= @step ? @step.id : nil %>" type="hidden">

            <div class="form-group">
              <label>Wait time in milliseconds:</label>
              <input name="wait" type="text" class="form-control" value="2000">
            </div>
            <div class="form-group">
              <label>Step Type: </label>
              <select name="action_type" class="form-control">
                <% Step.web_step_types.keys.each do |stepKey| %>
                    <option value="<%= stepKey %>">
                        <%= Step.web_step_types[stepKey] %></option>
                <% end %>
              </select>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
      </div>
    </div>
  </div>
</div>